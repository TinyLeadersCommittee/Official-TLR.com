<style>
  /* FOOTER */
  .site-footer {
    background-color: var(--footer-bg);
    color: var(--footer-text); /* Ensure generic text inherits this */
    padding: 4rem 1.5rem;
    margin-top: auto;
    border-top: 1px solid var(--border-subtle); /* Use variable */
  }

  .footer-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-column h3 {
    color: var(--footer-text); /* Use the footer specific text var */
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 1.5rem;
    
    border-bottom: 1px solid var(--border-subtle); /* Use variable */
    padding-bottom: 0.75rem;
    margin-bottom: 1rem;
    width: 100%;
  }

  .footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-column li {
    margin-bottom: 0.75rem;
  }

  .footer-column a {
    color: var(--footer-text); /* Use footer text color, not default blue/accent */
    opacity: 0.7;
    font-size: 0.95rem;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .footer-column a:hover {
    opacity: 1;
    color: var(--accent); /* Optional: Pop with accent color on hover */
  }

  .legal {
    font-size: 0.75rem;
    color: var(--text-muted); /* Use variable instead of #666 */
    text-align: center;
    line-height: 1.6;
  }
</style>