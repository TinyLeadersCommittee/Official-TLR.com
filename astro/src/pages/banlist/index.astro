<style>
  /* =========================================
     MOXFIELD BRANDING
     ========================================= */
  .visual-list-container {
    margin-bottom: 3rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .visual-list-label {
    font-weight: 700;
    color: var(--heading-color);
    font-size: 1.05rem;
  }

  .moxfield-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background-color: #312D4B; /* Official Dark Purple */
    color: #fff;
    padding: 0.6rem 1.5rem;
    border-radius: 6px;
    font-weight: 700;
    text-decoration: none;
    transition: transform 0.2s, background-color 0.2s, box-shadow 0.2s;
    box-shadow: 0 4px 10px rgba(49, 45, 75, 0.25);
    font-size: 1.1rem;
  }

  .moxfield-btn:hover {
    background-color: #433e63; /* Slightly lighter on hover */
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(49, 45, 75, 0.35);
    color: #fff;
  }

  .moxfield-icon {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  /* =========================================
     BAN CATEGORIES
     ========================================= */
  .ban-category {
    margin-top: 4rem;
  }

  .ban-category h3 {
    margin-bottom: 1rem;
    color: var(--heading-color);
    border-bottom: 1px solid var(--border-subtle);
    padding-bottom: 0.5rem;
  }

  /* =========================================
     MULTI-COLUMN LISTS
     ========================================= */
  .multi-column {
    column-count: 1;
    column-gap: 3rem; 
  }
  
  @media (min-width: 600px) {
    .multi-column {
      column-count: 2;
    }
  }
  
  @media (min-width: 900px) {
    .multi-column {
      column-count: 3;
    }
  }
</style>