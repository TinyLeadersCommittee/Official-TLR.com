<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
  </head>
  
  <body>
    
    <div class="background-overlay"></div>

    <main class="links-container">
      
      <header class="profile-header">
        <div class="avatar-circle">
          <img src="/assets/logo-placeholder.png" alt="TLR Logo" />
        </div>
        <h1>Tiny Leaders: Reborn</h1>
        <p class="bio-text">
          50 Cards. 3 Mana. Infinite Strategy.<br>
          The official hub for the format.
        </p>
      </header>

      <div class="link-stack">
        {links.map((link) => (
          <a href={link.url} class="link-card" target={link.url.startsWith('http') ? "_blank" : "_self"}>
            <div class="icon-box" set:html={link.icon} />
            <div class="link-info">
              <span class="link-title">{link.title}</span>
              <span class="link-sub">{link.subtitle}</span>
            </div>
            <span class="arrow">&rarr;</span>
          </a>
        ))}
      </div>

    </main>

  </body>
</html>

<style>
  /* --- PAGE SETUP --- */
  body {
    background-color: var(--bg);
    color: var(--text-main);
    font-family: var(--font-body, sans-serif);
    margin: 0;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center; /* Vertically centers content on desktop */
  }

  /* Optional: Adds a subtle gradient if you want it to look "premium" */
  .background-overlay {
    position: fixed;
    top: 0; left: 0; width: 100%; height: 100%;
    background: radial-gradient(circle at top, var(--surface) 0%, transparent 70%);
    z-index: -1;
    pointer-events: none;
  }

  /* --- CONTAINER --- */
  .links-container {
    width: 100%;
    max-width: 480px;
    padding: 2rem 1.5rem;
    text-align: center;
  }

  /* --- HEADER --- */
  .profile-header {
    margin-bottom: 2.5rem;
  }

  .avatar-circle {
    width: 96px;
    height: 96px;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    background: var(--surface);
    border: 2px solid var(--accent);
    padding: 4px;
  }

  .avatar-circle img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    display: block;
  }

  h1 {
    font-size: 1.5rem;
    margin: 0 0 0.5rem 0;
    color: var(--heading-color);
    font-weight: 800;
  }

  .bio-text {
    color: var(--text-muted);
    font-size: 0.95rem;
    line-height: 1.5;
    margin: 0;
  }

  /* --- LINK STACK --- */
  .link-stack {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }

  .link-card {
    display: flex;
    align-items: center;
    background-color: var(--surface);
    border: 1px solid var(--border-subtle);
    padding: 1rem;
    text-decoration: none;
    border-radius: 12px; /* Slightly softer corners for mobile feel */
    transition: transform 0.2s ease, border-color 0.2s ease, box-shadow 0.2s ease;
    position: relative;
  }

  .link-card:hover {
    border-color: var(--accent);
    transform: translateY(-3px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.3);
    z-index: 2;
  }

  /* --- CARD INTERNALS --- */
  .icon-box {
    font-size: 1.5rem;
    margin-right: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;  /* Fixed width for alignment */
    height: 32px; /* Fixed height for alignment */
    color: var(--heading-color); /* Makes icons match your theme */
  }

  /* Force the SVG to fill the box */
  .icon-box :global(svg) {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .link-info {
    flex-grow: 1;
    text-align: left;
    display: flex;
    flex-direction: column;
  }

  .link-title {
    font-family: var(--font-heading, sans-serif);
    font-weight: 700;
    font-size: 1rem;
    color: var(--heading-color);
  }

  .link-sub {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin-top: 2px;
  }

  .arrow {
    font-size: 1.2rem;
    color: var(--border-subtle);
    margin-left: 0.5rem;
  }

  .link-card:hover .arrow {
    color: var(--accent);
  }
</style>