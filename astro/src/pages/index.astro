---
// src/pages/index.astro
import LegalFooter from '../components/footer/LegalFooter.astro';

// 1. UPDATED BACKGROUND IMAGE PATH
import bgImage from '../assets/images/splash-page/eld-64-so-tiny.jpg';
import { Image } from 'astro:assets';

// Card Art Imports
import acererak from '../assets/images/splash-page/acererak.jpg';
import gost from '../assets/images/splash-page/gost.jpg';
import grist from '../assets/images/splash-page/grist.jpg';
import marath from '../assets/images/splash-page/marath.jpg';
import mathas from '../assets/images/splash-page/mathas.jpg';
import fire from '../assets/images/splash-page/ring-of-fire.png';
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Tiny Leaders Reborn</title>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Montserrat:wght@900&family=Playfair+Display:ital@1&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --bg: #0a0a0a;
            --text: #fff;
            --accent: #ff4d00;
        }

        [data-theme='light'] { --bg: #f0f0f0; --text: #111; --accent: #ff4d00; }
        [data-theme='committee'] { --bg: #1a1a1a; --text: #eee; --accent: #9c27b0; }
        [data-theme='charlotte'] { --bg: #111; --text: #fff; --accent: #ff69b4; }

        body {
            background-color: var(--bg);
            color: var(--text);
            margin: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            transition: all 0.5s ease;
            font-family: 'Montserrat', sans-serif;
            position: relative; 
            overflow-x: hidden;
        }

        /* --- LAYER 0: BACKGROUND --- */
        .fullscreen-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            pointer-events: none;
        }

        .bg-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.15; 
            filter: grayscale(100%);
        }

        /* --- MAIN WRAPPER --- */
        .totem-link {
            text-decoration: none;
            color: inherit;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 90vh; 
            cursor: pointer;
            text-align: center;
            margin: auto; 
            padding: 2rem 1rem;
            position: relative; 
            z-index: 5; /* Sit above background */
            width: 100%;
            max-width: 1400px; 
        }

        /* --- LAYER 1: THE FIRE WREATH --- */
        .fire-wreath-container {
            position: absolute;
            top: 50%;
            left: 50%;
            /* Center the wreath exactly behind the content */
            transform: translate(-50%, -50%);
            width: 900px; /* Massive size to encircle everything */
            height: 900px;
            z-index: 1; /* Sits behind text/collage (z:10+) but above bg (z:0) */
            pointer-events: none;
            opacity: 0.6; /* Semi-transparent */
            
            /* Optional: Add a slow spin to make it feel alive */
            animation: spinWreath 60s linear infinite;
        }

        .fire-img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            /* Filter to make it look hot/fiery depending on your source image */
            filter: drop-shadow(0 0 50px rgba(255, 77, 0, 0.4));
        }

        @keyframes spinWreath {
            from { transform: translate(-50%, -50%) rotate(0deg); }
            to { transform: translate(-50%, -50%) rotate(360deg); }
        }

        /* --- LAYER 2: COLLAGE CONTAINER --- */
        .collage-container {
            position: relative;
            height: 400px; 
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 10;
            margin: 2rem 0; 
        }

        /* --- SHAPE STYLES (Restored to clean triangles) --- */
        .c-shape {
            position: absolute;
            background-color: #000; 
            box-shadow: 0 10px 30px rgba(0,0,0,0.8); 
            filter: brightness(0.9);
            overflow: hidden; 
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .totem-link:hover .c-shape {
            filter: brightness(1.1); 
        }

        .c-img {
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: top center; /* Default to top center for faces */
        }

        /* --- TRIANGLE CONFIGURATION (Symmetrical & Clean) --- */
        
        /* 1. Center Anchor */
        .shape-center {
            z-index: 15; 
            width: 450px; 
            height: 450px;
            clip-path: polygon(0% 0%, 100% 0%, 50% 100%); /* Inverted */
            top: -20px;
        }

        /* 2. Inner Flanks (Standard Upright Triangles) */
        .shape-inner {
            z-index: 14;
            width: 320px;
            height: 320px;
            top: 20px;
            clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
        }
        .inner-left { right: 50%; transform: translateX(-40%); }
        .inner-right { left: 50%; transform: translateX(40%); }

        /* 3. Outer Flanks (Inverted Triangles) */
        .shape-outer {
            z-index: 13;
            width: 280px;
            height: 280px;
            top: -40px;
            clip-path: polygon(0% 0%, 100% 0%, 50% 100%);
        }
        .outer-left { right: 50%; transform: translateX(-110%); }
        .outer-right { left: 50%; transform: translateX(110%); }


        /* --- LAYER 3: TEXT --- */
        .slogan-top {
            font-family: 'Dancing Script', cursive;
            font-size: 5rem; 
            color: var(--accent);
            margin-bottom: -2rem; 
            position: relative;
            z-index: 20; 
            transform: rotate(-5deg);
            text-shadow: 0 4px 15px rgba(0,0,0,0.8);
        }

        .logo-main {
            font-size: 6.5rem; 
            letter-spacing: -4px;
            line-height: 0.8;
            text-transform: uppercase;
            margin-top: -4rem; 
            position: relative; 
            z-index: 20; 
            text-shadow: 0 4px 30px rgba(0,0,0,0.9); 
        }

        .reborn-sub {
            font-size: 1.8rem;
            font-weight: 300;
            letter-spacing: 14px;
            text-transform: uppercase;
            opacity: 0.9;
            margin-top: -0.5rem; 
            text-shadow: 0 2px 10px rgba(0,0,0,0.9);
            z-index: 20;
        }

        .baptize-phrase {
            margin-top: 5rem;
            font-family: 'Playfair Display', serif;
            font-style: italic;
            font-size: 1.5rem;
            letter-spacing: 2px;
            opacity: 0;
            animation: fadeIn 2s forwards 1s;
            text-shadow: 0 2px 10px rgba(0,0,0,0.5);
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 0.8; transform: translateY(0); }
        }

        /* --- FOOTER --- */
        .splash-footer-container {
            width: 100%;
            position: relative; 
            z-index: 30;
            background: linear-gradient(to top, var(--bg) 0%, rgba(0,0,0,0) 100%);
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 2rem;
            padding-bottom: 2rem;
            margin-top: auto; 
        }

        .theme-picker { display: flex; gap: 1.5rem; }
        .theme-btn { width: 25px; height: 25px; border-radius: 50%; border: 2px solid #555; cursor: pointer; transition: transform 0.2s; }
        .theme-btn:hover { transform: scale(1.3); }
        .t-light { background: #fff; }
        .t-dark { background: #333; }
        .t-committee { background: #9c27b0; }
        .t-charlotte { background: #ff69b4; }

        @media (max-width: 1200px) {
            .collage-container { transform: scale(0.8); margin: 0; }
            .logo-main { font-size: 5rem; margin-top: -3rem; }
            .fire-wreath-container { width: 700px; height: 700px; }
        }

        @media (max-width: 768px) {
            .collage-container { transform: scale(0.45); margin: -5rem 0; }
            .slogan-top { font-size: 3rem; margin-bottom: -1rem; }
            .logo-main { font-size: 3.5rem; margin-top: -2rem; }
            .reborn-sub { font-size: 1.2rem; letter-spacing: 8px; margin-top: 0; }
            .fire-wreath-container { width: 500px; height: 500px; }
        }
    </style>
</head>
<body>

    <div class="fullscreen-bg">
        <Image src={bgImage} alt="Background" class="bg-img" />
    </div>

    <a href="/discover" class="totem-link">
        
        <div class="fire-wreath-container">
    <img src={fire.src} class="fire-img" alt="Ring of Fire" />
</div>

        <span class="slogan-top">Big Plays</span>
        
        <div class="collage-container">
            <div class="c-shape shape-outer outer-left">
                <div class="c-img" style={`background-image: url(${mathas.src}); background-position: 50% 15%;`}></div>
            </div>
            
            <div class="c-shape shape-inner inner-left">
                <div class="c-img" style={`background-image: url(${gost.src}); background-position: 50% 10%;`}></div>
            </div>
            
            <div class="c-shape shape-center">
                <div class="c-img" style={`background-image: url(${acererak.src}); background-position: 50% 20%;`}></div>
            </div>
            
            <div class="c-shape shape-inner inner-right">
                <div class="c-img" style={`background-image: url(${grist.src}); background-position: 50% 20%;`}></div>
            </div>
            
            <div class="c-shape shape-outer outer-right">
                <div class="c-img" style={`background-image: url(${marath.src}); background-position: 50% 15%;`}></div>
            </div>
        </div>

        <h1 class="logo-main">Tiny Leaders</h1>
        <span class="reborn-sub">Reborn</span>
        
        <p class="baptize-phrase">
            Get baptized by the fire and be reborn.
        </p>
    </a>

    <div class="splash-footer-container">
        <nav class="theme-picker">
            <button class="theme-btn t-light" onclick="setTheme('light')" title="Light Theme"></button>
            <button class="theme-btn t-dark" onclick="setTheme('dark')" title="Dark Theme"></button>
            <button class="theme-btn t-committee" onclick="setTheme('committee')" title="Committee Theme"></button>
            <button class="theme-btn t-charlotte" onclick="setTheme('charlotte')" title="Charlotte Theme"></button>
        </nav>
        <LegalFooter />
    </div>

    <script is:inline>
        function setTheme(theme) {
            document.documentElement.setAttribute('data-theme', theme);
            localStorage.setItem('theme', theme);
        }
        const savedTheme = localStorage.getItem('theme') || 'dark';
        setTheme(savedTheme);
    </script>
</body>
</html>