---
import LegalFooter from '../components/footer/LegalFooter.astro';

// 1. BACKGROUND ASSET
import bgImage from '../assets/images/splash-page/eld-64-so-tiny.jpg';
import { Image } from 'astro:assets';
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Tiny Leaders Reborn</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&family=Playfair+Display:ital@1&display=swap" rel="stylesheet">
    
    <style>
        /* =========================================
           1. FONTS & VARIABLES
           ========================================= */
        
        /* Custom Local Font */
        @font-face {
            font-family: 'BrotherSignature';
            src: url('/fonts/BrotherSignature-7BWnK.otf') format('opentype'); 
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }

        :root {
            --bg: #0a0a0a;
            --text: #fff;
            --accent: #ff4d00;
        }

        [data-theme='light'] { --bg: #f0f0f0; --text: #111; --accent: #ff4d00; }
        [data-theme='committee'] { --bg: #1a1a1a; --text: #eee; --accent: #9c27b0; }
        [data-theme='charlotte'] { --bg: #111; --text: #fff; --accent: #ff69b4; }

        /* =========================================
           2. GLOBAL LAYOUT
           ========================================= */
        body {
            background-color: var(--bg);
            color: var(--text);
            margin: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            transition: all 0.5s ease;
            font-family: 'Montserrat', sans-serif;
            position: relative; 
            overflow-x: hidden;
        }

        /* =========================================
           3. BACKGROUND LAYER
           ========================================= */
        .fullscreen-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            pointer-events: none;
        }

        .bg-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.15; 
            filter: grayscale(100%);
        }

        /* LIGHT THEME OVERRIDE: Restore color and bump opacity */
        [data-theme='light'] .bg-img {
            filter: grayscale(0%); 
            opacity: 0.35; 
        }

        /* =========================================
           4. MAIN CONTENT (THE TOTEM)
           ========================================= */
        .totem-link {
            text-decoration: none;
            color: inherit;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 90vh; 
            cursor: pointer;
            text-align: center;
            margin: auto; 
            padding: 2rem 1rem;
            position: relative; 
            z-index: 5; 
            width: 100%;
            max-width: 1400px; 
        }

        /* Typography */
        .slogan-top {
            font-family: 'BrotherSignature', cursive;
            font-size: 3.5rem; 
            color: var(--accent);
            margin-bottom: -1rem; 
            transform: rotate(-5deg);
            text-shadow: 0 4px 15px rgba(0,0,0,0.8);
            letter-spacing: 2px;
        }

        .logo-main {
            /* Responsive sizing: Min 3rem, Ideal 13vw, Max 7rem */
            font-size: clamp(3rem, 13vw, 7rem);
            letter-spacing: -4px;
            line-height: 0.8;
            text-transform: uppercase;
            margin: 0;
            text-shadow: 0 4px 30px rgba(0,0,0,0.9); 
            white-space: nowrap;
        }

        .reborn-sub {
            font-size: 2rem;
            font-weight: 300;
            letter-spacing: 16px;
            text-transform: uppercase;
            opacity: 0.9;
            margin-top: 1rem; 
            text-shadow: 0 2px 10px rgba(0,0,0,0.9);
        }

        .baptize-phrase {
            margin-top: 8rem; 
            font-family: 'Playfair Display', serif;
            font-style: italic;
            font-size: 1.5rem;
            letter-spacing: 2px;
            opacity: 0;
            animation: fadeIn 2s forwards 1s;
            text-shadow: 0 2px 10px rgba(0,0,0,0.5);
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 0.8; transform: translateY(0); }
        }

        /* =========================================
           5. FOOTER & THEME PICKER
           ========================================= */
        .splash-footer-container {
            width: 100%;
            position: relative; 
            z-index: 30;
            /* Default Dark Fade */
            background: linear-gradient(to top, var(--bg) 0%, rgba(0,0,0,0) 100%);
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 2rem;
            padding-bottom: 2rem;
            margin-top: auto; 
        }

        /* Light Theme Footer Override */
        [data-theme='light'] .splash-footer-container {
            /* Fade to light gray instead of black */
            background: linear-gradient(to top, var(--bg) 60%, rgba(240, 240, 240, 0) 100%);
        }
        
        /* Force Footer Text Dark in Light Mode */
        [data-theme='light'] .splash-footer-container :global(*) {
            color: #111 !important;
            border-color: #ccc !important; 
        }

        .theme-picker { display: flex; gap: 1.5rem; }
        .theme-btn { width: 25px; height: 25px; border-radius: 50%; border: 2px solid #555; cursor: pointer; transition: transform 0.2s; }
        .theme-btn:hover { transform: scale(1.3); }
        .t-light { background: #fff; }
        .t-dark { background: #333; }
        .t-committee { background: #9c27b0; }
        .t-charlotte { background: #ff69b4; }

        /* =========================================
           6. RESPONSIVE
           ========================================= */
        @media (max-width: 768px) {
            .slogan-top { font-size: 4rem; margin-bottom: 0; }
            .reborn-sub { font-size: 1rem; letter-spacing: 6px; }
            .baptize-phrase { margin-top: 5rem; font-size: 1.2rem; }
        }
    </style>
</head>
<body>

    <div class="fullscreen-bg">
        <Image src={bgImage} alt="Background" class="bg-img" />
    </div>

    <a href="/discover" class="totem-link">
        <span class="slogan-top">Big Plays</span>
        <h1 class="logo-main">Tiny Leaders</h1>
        <span class="reborn-sub">Reborn</span>
        
        <p class="baptize-phrase">
            Get baptized by the fire and be reborn.
        </p>
    </a>

    <div class="splash-footer-container">
        <nav class="theme-picker">
            <button class="theme-btn t-light" onclick="setTheme('light')" title="Light Theme"></button>
            <button class="theme-btn t-dark" onclick="setTheme('dark')" title="Dark Theme"></button>
            <button class="theme-btn t-committee" onclick="setTheme('committee')" title="Committee Theme"></button>
            <button class="theme-btn t-charlotte" onclick="setTheme('charlotte')" title="Charlotte Theme"></button>
        </nav>
        <LegalFooter />
    </div>

    <script is:inline>
        function setTheme(theme) {
            document.documentElement.setAttribute('data-theme', theme);
            localStorage.setItem('theme', theme);
        }
        const savedTheme = localStorage.getItem('theme') || 'dark';
        setTheme(savedTheme);
    </script>
</body>
</html>